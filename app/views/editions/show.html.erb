<% content_for :metatags do %>
  <meta property="robots" content="noindex, nofollow"/>
<% end %>

<% content_for :title do %>
  <%= "Festival de Inverno | " + truncate(@edition.year.strftime("%Y"), length: 160) %>
<% end %>

<% content_for :description do %>
  <%= truncate(@edition.tema, length: 300) %>
<% end %>

<% content_for(:side_bar) do %>
    <%= render :partial => "shared/sidebar_admin" %>
<% end %>

<div class="container_admin">
  <div class="content-body" >

    <div id="news_show">
      
      <% if @edition.image_edition.present? %>
        <%= image_tag(@edition.image_edition.first.url(:medium)) %>
      <% end %>

      <div class="year">
        <%= @edition.year.strftime("%Y")%>
      </div>
      <div class="local">
        <%= @edition.local %>
      </div>
      <div class="tema">
        <%= @edition.tema %>
      </div>
      <div class="description">
        <%= @edition.description.html_safe %>
      </div>
    </div>
   

    <% if user_signed_in? %>
      <%= link_to "Editar", edit_edition_path(@edition), class: "waves-effect waves-light btn" %>
      <%= link_to "Deletar", editions_path(@edtion), class: "waves-effect waves-light btn", method: :delete, data: {confirm: "Tem certeza desta Ação?"} %>
    <% end %>
  </div>
</div>

