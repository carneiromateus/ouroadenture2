<% content_for :metatags do %>
  <meta property="robots" content="noindex, nofollow"/>
<% end %>

<% content_for :title do %>
  <%= "Ouro Adventure | Admin - Roteiros" %>
<% end %>

<% content_for(:side_bar) do %>
    <%= render :partial => "shared/sidebar_admin" %>
<% end %>
<div class="container_admin">
  <div class="row">
    <div class="col s12 m12 l12 z-depth-3 card-panel">
      <div class="center">

      </br>
        <%= link_to 'Novo Roteiro', new_news_path, :class=>"btn btn-small",:style => "float :left"  %>
      </br>

       <h4 class="title">Roteiros</h4>

        <table>
          <thead>
            <tr>
              <th>Título</th>
              <th>Data de Publicação</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @news.each do |news| %>
              <tr>
                <td><%= news.title %></td>
                <td><%= news.created_at.strftime("%d/%m/%Y") %></td>
                <td><%= link_to("<i class='fa fa-eye'></i>".html_safe, news, :title => 'Visualizar')%></td>
                <td><%= link_to( "<i class='fa fa-edit'></i>".html_safe, edit_news_path(news), :title => 'Editar' )%></td>
                <td><%=link_to( "<i class='fa fa-trash'></i>".html_safe, news, :method => :delete, :data => { :confirm => 'Tem certeza que deseja apagar?' }, :title => 'Excluir' )%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
      </div>
    </div>
  </div>
</div>
