<% content_for :metatags do %>
  <meta property="robots" content="noindex, nofollow"/>
<% end %>

<% content_for :title do %>
  <%= "Festival de Inverno | " + truncate(@news.title, length: 160) %>
<% end %>

<% content_for :description do %>
  <%= truncate(@news.description, length: 300) %>
<% end %>

<% content_for(:side_bar) do %>
    <%= render :partial => "shared/sidebar_admin" %>
<% end %>

<div class="container_admin">
  <div class="content-body" >

    <div id="news_show">
      <h5 class="title" >
        <%= @news.title %> 
      </h5>

      <div class="description">
        <%= @news.short_description.html_safe %>
      </div>         
      <div class="description">
        <%= @news.description.html_safe %>
      </div>
      <div class="row">
        <div class="att col-md-12 left">
          <img src="<%= image_url('category_4.png')%>" style="width:20px"/>
          <span class="description"><b>Duração: </b> <%= @news.duration %></span>

        </div>
        <div class="att col-md-12 left">
          <img src="<%= image_url('category_4.png')%>" style="width:20px"/>
          <span class="description"><b>Local:</b> <%= @news.address %></span>
        </div>  
        <div class="att col-md-12 left">
          <img src="<%= image_url('category_4.png')%>" style="width:20px"/>
          <span class="description"><b>Valor:</b> R$<%= @news.value %></span>
        </div>
        <div class="att col-md-12 left">
          <img src="<%= image_url('category_4.png')%>" style="width:20px"/>
          <span class="description"><b>Datas:</b> <%= @news.dates %></span>
        </div> 
          
      </div>
    </div>
   

    <% if user_signed_in? %>
      <%= link_to "Editar", edit_news_path(@news), class: "waves-effect waves-light btn" %>
      <%= link_to "Deletar", news_path(@news), class: "waves-effect waves-light btn", method: :delete, data: {confirm: "Tem certeza desta Ação?"} %>
    <% end %>
  </div>
</div>

