<% content_for :metatags do %>
  <meta property="robots" content="noindex, nofollow"/>
<% end %>

<% content_for :title do %>
  <%= "Festival de Inverno | Admin - Slides" %>
<% end %>

<% content_for(:side_bar) do %>
    <%= render :partial => "shared/sidebar_admin" %>
<% end %>
<div class="container_admin">
  <div class="row">
    <div class="col s12 m12 l12 z-depth-3 card-panel">
      <div class="center">

      </br>
        <%= link_to 'Novo Slide', new_slide_path, :class=>"btn btn-small",:style => "float :left"  %>
      </br>

       <h4 class="title">Slides</h4>

        <table>
          <thead>
            <tr>
              <th>Ordem</th>
              <th>TÃ­tulo</th>
              <th>Link</th>
            </tr>
          </thead>

          <tbody>
            <% @slides.each do |slide| %>
              <tr>
                <td><%= slide.order %></td>
                <td><%= slide.title %></td>
                <td><%= slide.link %></td>
                <td><%= link_to("<i class='fa fa-eye'></i>".html_safe, slide, :title => 'Visualizar')%></td>
                <td><%= link_to( "<i class='fa fa-edit'></i>".html_safe, edit_slide_path(slide), :title => 'Editar' )%></td>
                <td><%=link_to( "<i class='fa fa-trash'></i>".html_safe, slide, :method => :delete, :data => { :confirm => 'Tem certeza que deseja apagar?' }, :title => 'Excluir' )%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
      </div>
    </div>
  </div>
</div>
