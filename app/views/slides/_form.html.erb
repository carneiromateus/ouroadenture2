<style type="text/css">
.cke_editor_slide_description
{
  margin-left: 70px;
}
</style>

<% if @slide.errors.any? %>
  <div id="error_explanation" class="alert alert-danger alert-dismissible" role="alert" style="width: 80%; margin: auto">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h6><%= pluralize(@slide.errors.count, "error") %> que impedem que este slide seja salvo</h6>
 
    <ul>
    <% @slide.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= simple_form_for @slide, html: {multipart: true} do |f| %>
    <div class="container_admin">
        <div class="row">
            <div class="col s12 m12 l12 z-depth-3 card-panel">
                <div class="center">

                    <h5 class="titulo" style="margin: 20px 0px;">Slide</h5>

                
                </div>

                <%= f.input :image, type: :file, label: "Imagem(1177x432)" %>

        
                 <%= f.input :title, label: "Título" %>

                <%= f.input :subtitle, label: "Chamada" %>

                <%= f.input :link, label: "Link do botão" %>

                <%= f.input :order, label: "Prioridade" %>

                <% if params[:action] == 'edit'%>
                    <%= f.button :submit, "Atualizar Slide" %>
                <% else %>
                    <%= f.button :submit, "Criar Slide", class: 'btn' %>
                <% end %>

            </div>
        </div>
    </div>
<% end %>
