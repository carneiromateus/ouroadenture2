    <div class="container_admin">
        <div class="row">
            <div class="col s12 m12 l12 z-depth-3 card-panel">
                <div class="center">
                    <% if params[:action] == 'edit'%>
                        <h2 class="title" style="margin: 20px 0px;">Editar Categoria</h2>
                    <% else %>
                        <h2 class="title" style="margin: 20px 0px;">Nova Categoria</h2>

                    <% end %>

                     <a ><%= image_tag("logo_h_fest_padrao_preto.png", :width => 450, :height => 100, :crop => :fill) %></a>
                </div>

                
                <%= f.input :name, :label => "TÃ­tulo" %>
                

                <script>
	          $(function() {
	              $('#cp2').colorpicker();
	          });
        </script>
               

                <% if params[:action] == 'edit'%>
                    <%= f.button :submit, "Atualizar Categoria" %>
                <% else %>
                    <%= f.button :submit, "Criar Categoria", class: 'btn' %>
                <% end %>
                </br>


            </div>
        </div>
    </div>
<% end -%>
