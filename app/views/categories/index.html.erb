<% content_for :metatags do %>
  <meta property="robots" content="noindex, nofollow"/>
<% end %>

<% content_for :title do %>
  <%= "Savassinha | Admin - Realizadores" %>
<% end %>

<% content_for(:side_bar) do %>
    <%= render :partial => "shared/sidebar_admin" %>
<% end %>
<div class="container_admin">
  <div class="row">
    <div class="col s12 m12 l12 z-depth-3 card-panel">
      <div class="center">

      </br>
        <%= link_to 'Nova Categoria', new_category_path, :class=>"btn btn-small",:style => "float :left"  %>
      </br>

       <h4 class="title">Categorias de Eventos</h4>

        <table>
          <thead>
            <tr>
              <th>Nome</th>
            </tr>
          </thead>

          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td><%= link_to("<i class='fa fa-eye'></i>".html_safe, category, :title => 'Visualizar')%></td>
                <td><%= link_to( "<i class='fa fa-edit'></i>".html_safe, edit_category_path(category), :title => 'Editar' )%></td>
                <td><%=link_to( "<i class='fa fa-trash'></i>".html_safe, category, :method => :delete, :data => { :confirm => 'Tem certeza que deseja apagar?' }, :title => 'Excluir' )%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
      </div>
    </div>
  </div>
</div>
