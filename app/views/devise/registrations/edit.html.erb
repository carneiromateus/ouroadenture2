<% content_for(:side_bar) do %>
    <%= render :partial => "shared/sidebar_admin" %>
<% end %>

<% if resource.errors.any? %>
  <div id="error_explanation" class="alert alert-danger alert-dismissible" role="alert" style="width: 80%; margin: auto">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <ul>
    <% resource.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class="container_admin edit-user">
        <div class="row">
            <div class="col s12 m12 l12 z-depth-3 card-panel">
                <div class="center">
                    <h2 class="title" style="margin: 20px 0px;">Editar Perfil</h2>

                    <a ><%= image_tag("logo_h_fest_padrao_preto.png", :width => 450, :height => 100, :crop => :fill) %></a>
                </div>

                <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, autocomplete: 'off' }) do |f| %>

                  <div class="form-inputs"> 
                    <%= f.input :name, required: true, autofocus: true, label: "Nome" %>
                    <%= f.input :email, required: true, label: "Email" %>

                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                    <% end %>

                    <%= f.input :password, hint: "Deixe em branco se não quiser modificar", required: false, label: "Senha" %>
                    <%= f.input :password_confirmation, required: false, label: "Confirmação de senha" %>
                    <%= f.input :current_password ,hint: "Precisamos da sua senha para confirmar as modificações", required: true, label: "Senha Atual" %>
                  </div>

                  <div class="form-actions">
                    <%= f.button :submit, "Update" %>
                  </div>
                <% end %>

                <p><%= link_to "Excluir conta?", registration_path(resource_name), data: { confirm: "Você tem certeza disso?" }, method: :delete, class: "titulo" %></p>


            </div>
        </div>
    </div>

