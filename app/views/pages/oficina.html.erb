<% content_for :title do %>
  <%= "Festival de Inverno | " + truncate(@oficina.name, length: 70) %>
<% end %>

<% content_for :description do %>
  <%= truncate(strip_tags(@oficina.descripton), length: 300) %>
<% end %>


<div class="festival_container">
  <div class="content-body" >

   <div id="news_show">
      <h5 class="title" >
        <%= @oficina.name %> 
      </h5>

    
       <div class="description">
        <p>Data: <%= @oficina.start_at.strftime('%d/%b') %> <%if not @oficina.finish_at.nil?%> à <%= @oficina.finish_at.strftime('%d/%b')%><%end%> </p>
        <p>Horário: <%= @oficina.start_at.strftime('%-H:%M') %></p>
        <p>Vagas: <%= @oficina.vacancies %></p>
      </div>
      <div class="description">
        <%= @oficina.descripton.html_safe %>
      </div>
     
    <p>
      <%= link_to "inscreva-se", "#{@oficina.id}/inscricao"%>
    </p>
    </div>
  </div>
</div>


