<!DOCTYPE html>
<html >
<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

  <!--Import Google Icon Font-->
  <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <%= javascript_include_tag 'responsiveslides' %>
</head>

<body>
   <div class="feop_container_home section">
    <ul class="rslides">
      <% @slides.each.with_index do |item, i| %>
        <li>
          <%= link_to image_tag(item.image(:original)), item.link, target: :_blank%>
          <p class="caption"> <%= link_to item.subtitle, item.link, :class => "caption", target: :_blank %> </p>
      <%end%>   
    </ul>


    <% if @news.present? %>
      <div class="section-title">
        <h1 class="title">Últimas notícias</h1>
        <div class="section-title-line"> ∎ </div>
      </div>
       
      <ul class="new-card">
        <% @news.each do |item| %>
          <li class="new-card-item">
            <div class="new-card-img">
              <% if item.video_url.present? %>
                <div class="flex-video widescreen">               
                  <%= embed(item.video_url) %>
                </div>
              <% else %>
                <% if item.image_news.present? %>
                  <%= link_to image_tag(item.image_news.first.url(:medium)), noticia_path(item) %>
                <% end %>
              <% end%>
            </div> 
            <div class="new-card-content">
              <div class="new-card-date">
                Publicado em <%= item.publish_at.strftime("%d/%m/%Y") %>
              </div> 
              <div class="new-card-title">
                <%= link_to item.title, noticia_path(item) %>
              </div> 
              <hr class="line-item"> </hr>
            </div>
          </li>
        <% end %>
      </ul>
      <div class="news-action" style="margin-bottom:20px">
        <%= link_to "Mais notícias", noticias_path, :style => "color: #337ab7!important;" %> 
      </div>
    <% end %>
      </ul>
      </br>

  </div>
  <% if @directors.present? %>
    <div class="section-title">
      <h1 class="title">Realização</h1>
      <div class="section-title-line"> ∎ </div>
      </br>
    </div>
    <div class="owl-demo2 owl-carousel">
      <% @directors.each do |item|%>
        <div class="item">
          <a href="<%=item.link%>" target="_blank"><%= image_tag item.image.url(:original), alt: item.name,:class=> "imagen", target: :_blank %></a>
        </div>
      <%end%>
      <div class="item">

        <a href="https://www.feop.com.br" target="_blank"><%= image_tag "logo_feop.png", alt:"FEOP",:class=> "imagen", target: :_blank %></a>
      </div>
    </div>
  <%end%>
  </br>
  <% if @sponsors.present? %>
    <div class="section-title">
      <h1 class="title" >Patrocínio</h1>
      <div class="section-title-line"> ∎ </div>
      </br>
    </div>
    <div class="owl-demo owl-carousel">
      <% @sponsors.each do |item|%>
        <% if item.size %>
          <div class="item hundred4" style="">
            <a href="<%=item.link%>" target="_blank"><%= image_tag item.image.url, alt: item.name,:class => "pat400" , target: :_blank%></a>
          </div>
        <% else %>
          <div >
            <a href="<%=item.link%>" target="_blank"><%= image_tag item.image.url, alt: item.name,:class => "pat" , target: :_blank%></a>
          </div>
        <%end%>
      <%end%>
    </div>
  <%end%>
  </br>
  </br>
</body>
<script>
  $(function() {
    $(".rslides").responsiveSlides({
      auto: true,
      pager: true,
      nav: true,
      speed: 500,
      maxwidth: 1177,
      namespace: "centered-btns"
    });
  });
</script>

<script type="text/javascript">

    $(document).ready(function(){
      $('.slider').slider();
    });
  $(document).ready(function () {  

    $('#hero-grid').masonry({
      itemSelector: '.grid-item',
      columnWidth: 30,
      fitWidth: true,
      gutter: 5
    });

    
  });

 
</script>
<script type="text/javascript">
  $(document).ready(function(){
   
    $(".owl-demo2").owlCarousel({
      loop:false,
      autoplay: false, 
      items : <%=@directors.size+1%>,
      navigation: false,
    
    });
    $(".owl-demo").owlCarousel({
      loop:false,
      autoplay: false, 
      items : <%=@sponsors.size%>,
      navigation: false,
      
    
    });


  });
   

 
</script>

</html>