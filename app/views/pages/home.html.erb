<style type="text/css">
  
  .new-card-item{
    width: 23%; 
    margin: 20px 10px;
    position: relative;
    display: inline-block;
    vertical-align: top;
  }
  .new-card{
    width:90%;
    margin-right: 5%;
    margin-left: 5%;
  }
  @media only screen and (max-width : 992px) {
    .new-card-item{
      width: 30%; 
    }
  }
  @media only screen and (max-width : 766px) {
    .new-card-item{
      width: 45%; 
    }
    .caption{
      font-size:24px;
    } 
  }
  @media only screen and (max-width : 480px) {
    .new-card-item{
