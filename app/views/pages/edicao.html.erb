<% content_for :title do %>
  <%= "Ouro Adventure | " + truncate(@edition.title, length: 70) %>
<% end %>

<% content_for :description do %>
  <%= truncate(strip_tags(@edition.description), length: 300) %>
<% end %>

<div class="top-container" style="background-image:url('<%=image_url('back_photo2.jpg') %>') ">
  <image src="<%= image_url('13.1.png')%>" align="center" class="thumb_115"/>
  <h3 align="center" class="primary-heading"><%= @edition.title %></h3>
</div>

<section class="probootstrap-section roteiro">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="col-md-6">
          <h6 class="title"><%= @edition.title %></h6>     
          <div class="att col-md-12 left">
            <img src="<%= image_url('category_4.png')%>" style="width:20px"/>
            <span class="description"><b>Duração:</b><%= @edition.duration %></span>
          </div>
          <div class="att col-md-12 left">
            <img src="<%= image_url('category_4.png')%>" style="width:20px"/>
            <span class="description"><b>Local:</b><%= @edition.address %></span>
          </div>  
          <div class="att col-md-12 left">
            <img src="<%= image_url('category_4.png')%>" style="width:20px"/>
            <span class="description"><b>Valor:</b><%= @edition.value %></span>
          </div>
          <div class="att col-md-12 left">
            <img src="<%= image_url('category_4.png')%>" style="width:20px"/>
            <span class="description"><b>Datas:</b><%= @edition.dates %></span>
          </div> 
          <div class="description">
            <%= @edition.short_description.html_safe %>
          </div>
        
        </div>
        <div class="col-md-6">
          <% if @edition.image_edition.present? %>  
            <div class="first-image" style="background-image: url(<%= @edition.image_edition.first.url(:original) %>)"></div>
          <% end %>
        </div>
        <div class="col-md-12 description" style="margin-top:20px;">
          <%= @edition.description.html_safe %>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="probootstrap-section categories">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <% @edition.director.each do |activity|%>
          <div class="col-md-4">
            <div class="col-md-3" style="margin-top:10%">
              <% if activity.image.exists?%>
                <img class="thumb_75" src="<%= activity.image %>"/>
              <%else%>
                <img class="thumb_75" src="<%= image_url('category_3.png')%>"/>
              <%end%>
            </div>
            <div class="col-md-9">
              <h6 class="title"><%= activity.name%></h6>
              <p class="description" style="height:100%"><%= activity.description%></p>
            </div>
          </div>
        <%end%>  
        
      </div>
    </div>
  </div>
</section>
<section class="probootstrap-section roteiros">
  <div class="container">
    <div class="row">
      <div class="probootstrap-heading justify-content col-md-12">
        <div class="image-center">
          <image src="<%= image_url('5.png')%>" align="center" class="thumb_75"/>
        </div>
        <h1 align="center" class="primary-heading">Fotos</h1>
        <p align="center" class="col-md-6 col-md-offset-3 text-thin">Lorem ipsum vivamus nam cras convallis elit risus praesent non consectetur purus lacus</p>
      </div>
      <div class="roteiro-carousel col-md-6 col-md-offset-3">
        <% if @edition.image_edition.present? %>  
          <div class="news_image_description">
            <div class="legend">
              <%= @edition.subtitle %>
            </div>
            <% if @edition.image_edition.count == 1 %>
              <img src=<%= @edition.image_edition.first.url(:original) %> ></img>
            <% else %>  

              <div id="carousel-news" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                   <% @edition.image_edition.each_with_index do |img, index| %>
                    
                      <li data-target="#carousel-news" data-slide-to="<%= index %>" style="border:2px solid gray;">
                      </li>                  
                  <% end %>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                  <% @edition.image_edition.each_with_index do |img, index| %>
                    <% if index == 0 %>
                      <div class="item active">
                        <img src="<%= img.url(:original) %>" alt="...">
                      </div>
                    <% else %>
                      <div class="item">
                        <img src="<%= img.url(:original) %>" alt="...">
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
            <%end%>           
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section class="probootstrap-section contact" style="background-image:linear-gradient(to left, rgba(9,88,93, 1) 50%, rgba(9, 88, 93, .1) 75%, transparent 50%),url(<%= image_url('back_contact.jpeg')%>);">
  <div class="golden-border darker-border"></div>
  <div class="container">
    <div class="row">
      
      <div class="col-md-12" style="margin:30px 0;">
        <h2 class="contact-title"> <b>Contato</b></h2>
      </div>
      <div class="col-md-4 col-md-offset-6">
        <form class="contact-form">
          <input placeholder="Nome" type="text">
          <input placeholder="Email" type="email">
          <input placeholder="Telefone(opcional)" type="text">
          <input placeholder="Assunto" type="text">
          <textarea placeholder="Mensagem..."></textarea>
          <button class="btn-flat contact-submit" type="submit">Enviar</button>
        </form>
      </div>       
    </div>
  </div>
</section>



<script type="text/javascript">

  $(document).ready(function(){
    $('#carousel.post').carousel({
      interval: false
    });
  });

</script>






