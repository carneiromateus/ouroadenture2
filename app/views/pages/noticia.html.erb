<section class="probootstrap-section roteiros">
  <div class="container">
    <div class="row">
      <div class="probootstrap-heading justify-content col-md-12">
        <div class="image-center">
          <image src="<%= image_url('5.png')%>" align="center" class="thumb_75"/>
        </div>
        <h1 align="center" class="primary-heading">Fotos</h1>
        <p align="center" class="col-md-6 col-md-offset-3 text-thin">Lorem ipsum vivamus nam cras convallis elit risus praesent non consectetur purus lacus</p>
      </div>
      <div class="roteiro-carousel col-md-6 col-md-offset-3">
        <% if @news.image_news.present? %>  
          <div class="news_image_description">
            <div class="legend">
              <%= @news.subtitle %>
            </div>
            <% if @news.image_news.count == 1 %>
              <img src=<%= @news.image_news.first.url(:original) %> ></img>
            <% else %>  

              <div id="carousel-news" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                   <% @news.image_news.each_with_index do |img, index| %>
                    <% if index == 0 %>
                      <li data-target="#carousel-news" data-slide-to="<%= index %>" class="active" style="background-image: url(<%= image_url(img.url(:original)) %>)">
                      </li>
                    <% else %>
                      <li data-target="#carousel-news" data-slide-to="<%= index %>" style="background-image: url(<%= image_url(img.url(:original)) %>)">
                      </li>                  
                    <% end %>
                  <% end %>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                  <% @news.image_news.each_with_index do |img, index| %>
                    <% if index == 0 %>
                      <div class="item active">
                        <img src="<%= img.url(:original) %>" alt="...">
                      </div>
                    <% else %>
                      <div class="item">
                        <img src="<%= img.url(:original) %>" alt="...">
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
            <%end%>           
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

