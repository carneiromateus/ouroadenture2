

<style type="text/css">
  
  nav{
    background-color: #06454A;
  }
  .nav-container{
    background-color: #09585D;
  }
  .navbar-collapse{
    width:60%;
    margin-right:10%;
  }
  .navbar-header{
    width:20%;
    margin-left:10%;
    height:50px;
  }
  li > a:hover{
    background-color:rgba(0,0,0,0)!important;
  }
  nav ul li.active{
    background-color:rgba(0,0,0,0)!important
  }
  nav ul li.active > div.arrow-up {
    width: 0; 
    height: 0px; 
    border-left: 10px solid transparent;
    border-right: 10px solid transparent;    
    border-bottom: 15px solid #06454A;
    position: absolute;
    margin-top: -15px;
    margin-left: 38%;
  }
  a:active {
    background-color:rgba(0,0,0,0)!important;
  }
  a:focus {
    background-color:rgba(0,0,0,0)!important;
    outline: 0;
    color:white!important;
  }
  .arrow-up {
    width: 0; 
    height: 0px; 
  }
  .toggle-navbar{
    display: none;
  }
  @media only screen and (max-width: 800px) {
    .navbar-nav {
      display:grid;
      margin:0 0 0 0 !important;
    }
    .navbar-collapse{
      width:100%;
      display:none;
    }
    .navbar-header{
      width:100%;
      margin-left:0%;
    }
    nav ul li.active > div.arrow-up {
      width: 0; 
      height: 0px; 
      border-left: 15px solid #06454A;
      border-top: 10px solid transparent;    
      border-bottom: 10px solid transparent;  
      position: absolute;
      margin: -30px 0 0 0;
    }
    .toggle-navbar{
      display: flex;
      height:0;
      width:0;
    }
    .icon-bars{
      padding:15px;
      cursor:pointer;
      float:left;
    }
    .nav-logo{
      float: right; 
    }
  }
  
  .hide{
    display:none!important;
  }
  .unhide{
    display:block!important;
  }
  .logo{
    max-width: 360px;
    max-height: 70px;
  }
</style>

<nav class="navbar-fixed-top">
  <div class="nav-container">
    
    <div class="navbar-header">
      <!-- <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button> -->
          <a class="toggle-navbar icon-bars" href="javascript:void(0);" onclick="myFunction()">
            <i class="fa fa-bars fa-2x"></i>
          </a>
          <a class="nav-logo" href="<%= root_url %>">
            <%= image_tag('logo.jpg',  :class => "logo")  %>
          </a>
    </div>
   <!--<div class="toggle-navbar">
    </div>-->
    <div id="navbar-collapse" class="navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li class="active"><a href="#" data-nav-section="welcome">Home</a><div class="arrow-up"></div></li>
        
        <li><a href="#" data-nav-section="events">Como funciona</a><div class="arrow-up"></div></li>
        <li><a href="#" data-nav-section="menu">Roteiros</a><div class="arrow-up"></div></li>
        <li><a href="#" data-nav-section="menu">Translados</a><div class="arrow-up"></div></li>
        <li><a href="#" data-nav-section="menu">Contato</a><div class="arrow-up"></div></li>            
      </ul>
    </div>
  </div>
</nav>

<script>
  function myFunction() {
      var x = document.getElementById("navbar-collapse");
      if (x.style.display === "none") {
        x.style.display = "block";
      } else {
          x.style.display = "none";
      }      
  }
</script>